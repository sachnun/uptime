{
  "name": "@uptime/api",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir dist",
    "deploy": "wrangler d1 migrations apply uptime-db --remote && wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply uptime-db --local",
    "db:migrate:remote": "wrangler d1 migrations apply uptime-db --remote",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "@cloudflare/puppeteer": "^1.0.4",
    "@hono/zod-validator": "^0.7.6",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.1",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251221.0",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3",
    "wrangler": "^4.56.0"
  }
}
